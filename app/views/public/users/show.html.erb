<div class="container px-5 px-sm-0 cake-font">
  <div class="row">
    <h3><%= @user.name %></h3>
    <p><%= @user.introduction %></p>
    <p>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "300x300" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
      <% end %>
    </p>
    <%= link_to "ユーザー編集", edit_user_path(@user.id) %>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>レシピ一覧</h2>
      <div class="row">
        <% @recipes.each do |recipe| %>
          <div class="col-md-6">
            <div class="card-deck">
              <div class="card" style="width:22rem">
                <%= link_to recipe_path(recipe.id) do %>
                  <p class="img"><%= image_tag recipe.image, format: "jpg", size: "359x250" %></p>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= recipe.name %></h5>
                  <p><%= link_to "#{recipe.post_comments.count} コメント", recipe_path(recipe.id) %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>