<div class="container my-3">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h4>レシピ投稿</h4>
      <%= form_with model: [:public, @recipe], url: recipes_path, method: :post do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.label :image, "レシピ画像" %>
            </div>
            <div class="col-md-9">
              <%= f.file_field :image, accept: "image/*" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.label :name, "レシピ名" %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name, :placeholder => "レシピ名" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.label :explanation, "作り方" %>
            </div>
            <div class="col-md-9">
              <%= f.text_area :explanation, :placeholder => "ここに作り方を記述します", class: "w-100", rows: 5 %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.label :comment, "投稿者コメント" %>
            </div>
            <div class="col-md-9">
              <%= f.text_area :comment, class: "w-100", rows: 3 %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.submit "新規登録", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
