<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <h2>フォロー一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <div class="row">
            <div class="col-md-6">
              <td>フォロー数: <%= current_user.followings.count %></td>
            </div>
            <div class="col-md-6">
              <%= link_to "フォロワー一覧", user_followers_path %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <% if user.profile_image.attached? %>
                <%= link_to image_tag(user.profile_image, size: "100x100"), user_path(user.id) %>
              <% else %>
                <%= link_to image_tag(no_image, size: "100x100"), user_path(user.id) %>
              <% end %>
              <span class="h3"><%= user.name %></span>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="row">
          <div class="col-md-6">
            <p>ユーザーはいません</p>
          </div>
          <div class="col-md-6">
            <%= link_to "フォロワー一覧", user_followers_path %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  
