<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h4>ユーザー編集</h4>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.label :profire_image, "プロフィール画像" %>
            </div>
            <div class="col-md-9">
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.label :name, "ニックネーム" %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.label :introduction, "自己紹介" %>
            </div>
            <div class="col-md-9">
              <%= f.text_area :introduction, class: "w-100", rows: 5 %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <%= f.submit "変更を保存", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>