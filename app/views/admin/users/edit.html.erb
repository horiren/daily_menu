<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <table class="table table-borderless">
          <h4 class="mt-3 mb-5">ユーザー編集</h4>
          <tr>
            <td>プロフィール画像</td>
            <td><%= f.file_field :profile_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "変更を保存", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>