<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 style="background-color:#DCDCDC">　ユーザー一覧　　</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <h4>ユーザーID</h4>
    </div>
    <div class="col-md-4">
      <h4>ニックネーム</h4>
    </div>
    <div class="col-md-6">
      <h4>メールアドレス</h4>
    </div>
  </div>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-2 border-top border-bottom">
        <%= user.id %>
      </div>
      <div class="col-md-4 border-top border-bottom">
        <%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
        <% end %>
      </div>
      <div class="col-md-6 border-top border-bottom">
        <%= user.email %>
      </div>
    <% end %>
  </div>
</div>