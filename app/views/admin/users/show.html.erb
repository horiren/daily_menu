<div class="container cake-font">
  <div class="row">
    <div class= col-md-9>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <span class="h3"><%= @user.name %></span>
      <p><%=simple_format(@user.introduction) %></p>
    </div>
    <div class= col-md-3>
      <%= link_to "ユーザー編集", edit_admin_user_path(@user.id) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>投稿レシピ一覧</h2>
      <%= render "admin/recipes/admin_recipe_all", recipes: @recipes %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= paginate @recipes, class: "pagination" %>
    </div>
  </div>
</div>