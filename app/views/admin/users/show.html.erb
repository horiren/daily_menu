<div class="container">
  <div class="row my-2">
    <div class= col-md-9>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <span class="h3"><%= @user.name %></span>
      <p><%=simple_format(@user.introduction) %></p>
    </div>
    <div class= col-md-3>
      <%= link_to edit_admin_user_path(@user.id), class: "btn btn-success" do %>
        <i class="fa-solid fa-user-pen" style="color: #ffffff;"></i>
      <% end %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-md-12">
      <h2>投稿レシピ一覧</h2>
      <%= render "admin/recipes/admin_recipe_all", recipes: @recipes %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-md-12 d-flex justify-content-center">
      <%= paginate @recipes, class: "pagination" %>
    </div>
  </div>
</div>