<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      
      <%= form_with model: [:public, @recipe], url: admin_recipe_path(@recipe), method: :patch do |f| %>
        <table class="table table-borderless">
          <h4 class="mt-3 mb-5">レシピ編集</h4>
          <tr>
            <td>レシピ画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>レシピ名</td>
            <td><%= f.text_field :name, :placeholder => "レシピ名" %></td>
          </tr>
          <tr>
            <td>作り方</td>
            <td><%= f.text_area :explanation, :placeholder => "ここに作り方を記述します" %></td>
          </tr>
          <tr>
            <td>投稿者コメント</td>
            <td><%= f.text_field :comment %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "変更を保存", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>